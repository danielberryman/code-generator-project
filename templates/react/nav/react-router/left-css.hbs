.container {
    background-color: #3270b8;
     height: 100vh;
     width: 4rem;
     display: flex;
     flex-direction: column;
}

 .header {
     height: 6rem;
     display: flex;
     align-content: center;
     justify-content: center;
     width: 100%;
}
 .logo_link {
     display: flex;
}
 .logo {
     width: 2rem;
}
 .title, .sub_title {
     display: none;
}
 .list {
     color: white;
     list-style: none;
     margin: 0;
     padding: 0;
}
 .list_item, .sub_list_item {
     display: flex;
     align-content: center;
     justify-content: center;
     cursor: pointer;
     margin: 0;
}
 .list_item a, .sub_list_item a {
     display: block;
     padding: 0.5rem 2rem;
    /* width: 100%;
     */
}
 .list_item a:hover, .sub_list_item a:hover {
     color: white;
}
 .list_item:hover, .sub_list_item:hover {
     background-color: #0e4f98;
}
 .link, .sub_link {
     color: white;
     text-decoration: none;
}
 .link span, .sub_link span {
     display: none;
}
 .sub_link {
     font-size: 0.8rem;
}
 .footer {
     margin-top: auto;
     margin-bottom: 1rem;
}
 @media (min-width: 960px) {
    /* NAV */
     .container {
         width: 20rem;
         display: flex;
         flex-direction: column;
    }
     .header {
         padding: 0 1rem;
    }
     .logo {
        /* margin: 0 1rem;
         */
    }
     .list_item, .sub_list_item {
         justify-content: left;
    }
     .list_item a, .sub_list_item a {
         width: 100%;
    }
     .titles {
         display: flex;
         flex-direction: column;
         justify-content: center;
         margin-left: 1rem;
    }
     .title, .sub_title {
         color: white;
         display: block;
         margin: 0;
         width: 100%;
    }
     .title {
         font-size: 1.25rem;
    }
     .sub_title {
         font-size: 0.75rem;
         line-height: 1rem;
    }
     .list_item, .sub_list_item {
         cursor: pointer;
         margin: 0;
    }
     .list_item a, .sub_list_item a {
         display: block;
         padding: 0.5rem 2rem;
    }
     .link span, .sub_link span {
         display: inline;
         padding-left: 0.5rem;
    }
}
